
<%- include ('partials/header'); -%>

<div class="container login-container">
    
	<div class="d-flex justify-content-center h-10">
		<div class="card login-card">
			<div class="card-header">
				<h3 class="login-header">LOGIN</h3>
			</div>
			<div class="card-body">
				<form action="/login" method="POST">
					<div class="input-group form-group email-input">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="far fa-envelope"></i></i></span>
						</div>
						<input type="text" class="form-control " name="email" placeholder="Email">
						
					</div>
					<div class="input-group form-group password-input">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" name="password" placeholder="Password">
					</div>
					<button type="submit" class="btn btn-primary login-button2">Login</button>
				</form>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					Don't have an account?<a href="/signup"> Sign Up</a>
				</div>
				
			</div>
		</div>
	</div>
</div>

